generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id           Int      @id @default(autoincrement())
  name         String
  email        String?  @unique
  phone        String?
  nit          String?
  address      String?
  creditLimit  Decimal  @default(0) @map("credit_limit") @db.Decimal(10, 2)
  creditUsed   Decimal  @default(0) @map("credit_used") @db.Decimal(10, 2)
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  sales        Sale[]
  creditSales  CreditSale[]

  @@map("customers")
}

enum PaymentMethod {
  EFECTIVO
  QR
  TARJETA
  CREDITO
}

enum SaleStatus {
  COMPLETED
  PENDING
  CANCELLED
}

model Sale {
  id             Int           @id @default(autoincrement())
  saleNumber     String        @unique @map("sale_number")
  customerId     Int?          @map("customer_id")
  customerName   String?       @map("customer_name")
  customerNit    String?       @map("customer_nit")
  subtotal       Decimal       @db.Decimal(10, 2)
  discount       Decimal       @default(0) @db.Decimal(10, 2)
  tax            Decimal       @default(0) @db.Decimal(10, 2)
  total          Decimal       @db.Decimal(10, 2)
  paymentMethod  PaymentMethod @map("payment_method")
  status         SaleStatus    @default(COMPLETED)
  userId         String?       @map("user_id")
  userName       String?       @map("user_name")
  notes          String?
  createdAt      DateTime      @default(now()) @map("created_at")

  customer       Customer?     @relation(fields: [customerId], references: [id])
  items          SaleItem[]
  invoice        Invoice?

  @@index([saleNumber])
  @@index([customerId])
  @@index([createdAt])
  @@map("sales")
}

model SaleItem {
  id              Int     @id @default(autoincrement())
  saleId          Int     @map("sale_id")
  productId       Int     @map("product_id")
  productSku      String  @map("product_sku")
  productName     String  @map("product_name")
  quantity        Int
  unitPrice       Decimal @map("unit_price") @db.Decimal(10, 2)
  subtotal        Decimal @db.Decimal(10, 2)
  discount        Decimal @default(0) @db.Decimal(10, 2)
  total           Decimal @db.Decimal(10, 2)
  stockId         Int?    @map("stock_id")
  batchNumber     String? @map("batch_number")

  sale Sale @relation(fields: [saleId], references: [id], onDelete: Cascade)

  @@index([saleId])
  @@index([productId])
  @@map("sale_items")
}

model Invoice {
  id                Int      @id @default(autoincrement())
  saleId            Int      @unique @map("sale_id")
  invoiceNumber     String   @unique @map("invoice_number")
  authorizationCode String?  @map("authorization_code")
  cuf               String?  // Código Único de Factura (SIN Bolivia)
  customerName      String   @map("customer_name")
  customerNit       String   @map("customer_nit")
  total             Decimal  @db.Decimal(10, 2)
  qrCode            String?  @map("qr_code")
  pdfUrl            String?  @map("pdf_url")
  isElectronic      Boolean  @default(false) @map("is_electronic")
  createdAt         DateTime @default(now()) @map("created_at")

  sale Sale @relation(fields: [saleId], references: [id], onDelete: Cascade)

  @@index([invoiceNumber])
  @@map("invoices")
}

model CreditSale {
  id             Int      @id @default(autoincrement())
  saleId         Int      @map("sale_id")
  customerId     Int      @map("customer_id")
  totalAmount    Decimal  @map("total_amount") @db.Decimal(10, 2)
  paidAmount     Decimal  @default(0) @map("paid_amount") @db.Decimal(10, 2)
  remainingAmount Decimal @map("remaining_amount") @db.Decimal(10, 2)
  dueDate        DateTime @map("due_date")
  isPaid         Boolean  @default(false) @map("is_paid")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  customer       Customer @relation(fields: [customerId], references: [id])
  payments       CreditPayment[]

  @@index([customerId])
  @@index([isPaid])
  @@map("credit_sales")
}

model CreditPayment {
  id            Int        @id @default(autoincrement())
  creditSaleId  Int        @map("credit_sale_id")
  amount        Decimal    @db.Decimal(10, 2)
  paymentMethod String     @map("payment_method")
  reference     String?
  notes         String?
  userId        String?    @map("user_id")
  userName      String?    @map("user_name")
  createdAt     DateTime   @default(now()) @map("created_at")

  creditSale CreditSale @relation(fields: [creditSaleId], references: [id], onDelete: Cascade)

  @@index([creditSaleId])
  @@map("credit_payments")
}
